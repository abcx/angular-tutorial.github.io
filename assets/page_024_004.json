{"background":{"class":"border_1"},"controls":{"l":"false","r":"false","t":"false","b":"false"},"subtitle":{"selector":"subtitle","text":"Reactive Forms"},"code":[{"type":"html","class":"height_75","code":"<app-nav></app-nav>\n\n<div class=\"row\">\n    <div class=\"col-md-4\">\n\n        <form [formGroup]=\"myForm\" (ngSubmit)=\"onSubmit(myForm)\">\n\n            <app-form-input\n                [name]=\"'name'\"\n                [control]=\"myForm.controls['name']\"\n                [label]=\"'Podaj imię'\"\n                [valid]=\"myForm.get('name').hasError('required')\"\n                [prompt]=\"'Musisz podać swoje imię.'\"\n            ></app-form-input>\n            \n            <app-form-input\n                [name]=\"'email'\"\n                [control]=\"myForm.controls['email']\"\n                [label]=\"'E-mail'\"\n                [valid]=\"myForm.controls.email.hasError('pattern')\"\n                [prompt]=\"'Nieprawidłowy adres e-mail.'\"\n            ></app-form-input>\n\n            <app-form-input\n                [name]=\"'message'\"\n                [control]=\"myForm.controls['message']\"\n                [label]=\"'Wiadomość'\"\n                [valid]=\"myForm.controls.message.hasError('minlength')\"\n                [prompt]=\"'Wiadomość musi mieć co najmniej 15 znaków.'\"\n            ></app-form-input>\n\n            <button class=\"btn btn-primary\" type=\"submit\" [disabled]=\"myForm.invalid\">\n                Wyślij\n            </button>\n\n        </form>\n    </div>\n</div>\n","filename":"reactive-form.component.html"}]}